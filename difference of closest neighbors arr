#include<bits/stdc++.h>
using namespace std;
int main()
{
   // int n;
   // cin>>n;
    int arr[3];
    for(int i=0;i<3;i++)
    {
        cin>>arr[i];
    }
    
    int diff1,diff2,diff3,diff;
    diff1=arr[0]-arr[1];
    diff2=arr[1]-arr[2];
    diff3=arr[2]-arr[0];
    diff=abs(diff1)+abs(diff2)+abs(diff3);
    cout<<abs(diff)<<endl;
    
    return 0;
    
}
